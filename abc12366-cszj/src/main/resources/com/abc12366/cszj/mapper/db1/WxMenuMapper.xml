<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abc12366.cszj.mapper.db1.WxMenuMapper">
       
       <sql id="Base_Column_List">
         id, parentId, sort, type, name, mkey, media_id, appid, pagepath, lastUpdate, createTime
       </sql>

       <insert id="insert" parameterType="com.abc12366.cszj.model.weixin.bo.menu.Button">
         INSERT INTO cszj_menu
         (<include refid="Base_Column_List"/>)
         VALUES (#{id}, #{parentId}, #{sort}, #{type}, #{name}, #{key}, #{media_id}, #{appid}, #{pagepath}, #{lastUpdate}, #{createTime}
       </insert>
       
        <update id="update" parameterType="com.abc12366.cszj.model.weixin.bo.menu.Button">
         UPDATE cszj_menu
         set parentId=#{parentId},sort=#{sort},type=#{type},name=#{name},mkey=#{key},
         media_id=#{media_id},appid=#{appid},pagepath=#{pagepath},lastUpdate=#{lastUpdate}
         where id=#{id}
       </update> 
       
       <delete id="deleteByPrimaryKey" parameterType="java.lang.String">
          DELETE FROM cszj_menu WHERE id = #{id}
       </delete>

</mapper>