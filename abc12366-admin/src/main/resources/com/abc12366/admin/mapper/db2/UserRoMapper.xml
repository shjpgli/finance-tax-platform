<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abc12366.admin.mapper.db2.UserRoMapper">

	<resultMap id="userBoResultMap" type="com.abc12366.admin.model.bo.UserBO">
		<id column="id" property="id" jdbcType="VARCHAR"/>
		<result column="username" property="username" jdbcType="VARCHAR"/>
		<result column="password" property="password" jdbcType="VARCHAR"/>
		<result column="nickname" property="nickname" jdbcType="VARCHAR"/>
		<result column="status" property="status" jdbcType="TINYINT"/>
        <result column="userId" property="userId" jdbcType="VARCHAR"/>
        <result column="orgId" property="orgId" jdbcType="VARCHAR"/>
        <result column="orgName" property="orgName" jdbcType="VARCHAR"/>
        <result column="job" property="job" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="address" property="address" jdbcType="VARCHAR"/>
		<result column="createTime" property="createTime" jdbcType="TIMESTAMP"/>
		<result column="lastUpdate" property="lastUpdate" jdbcType="TIMESTAMP"/>
		<collection property="rolesList" ofType="Role">
			<id column="roleId" property="id"/>
			<result column="roleName" property="roleName"/>
		</collection>
	</resultMap>

	<!-- 通用查询结果列-->
	<sql id="Base_Column_List">
		 id,	username,	password,	nickname,	status,	createTime,	lastUpdate
	</sql>

	<!-- 查询（根据主键ID查询） -->
	<select id="selectByPrimaryKey" resultType="com.abc12366.admin.model.User" parameterType="java.lang.String">
		 SELECT
		 <include refid="Base_Column_List" />
		 FROM sys_user
		 WHERE id = #{id}
	</select>

	<!-- 查询所有用户 -->
	<select id="selectList" resultType="com.abc12366.admin.model.User" parameterType="com.abc12366.admin.model.User">
		SELECT
		<include refid="Base_Column_List" />
		FROM sys_user
        <where>
            1=1
            <if test="username != null and username!=''"> and username = #{username}</if>
            <if test="nickname != null and nickname!=''"> and nickname = #{nickname}</if>
            <if test="status != null and status!=''"> AND status = #{status}</if>
        </where>
	</select>

    <!--查询单个用户及权限-->
   <select id="selectOne" resultMap="userBoResultMap" parameterType="java.lang.String">
        SELECT
		t.id,
		t.username,
		t.password,
		t.nickname,
		t.status,
		t.createTime,
		t.lastUpdate,
        e.userId,
        e.job,
        e.phone,
        e.address,
		e.orgId,
		s.name AS orgName,
		o.id AS roleId,
		o.roleName AS roleName
		FROM
		sys_user t
		LEFT JOIN sys_user_role r ON t.id = r.userId
		LEFT JOIN sys_role o ON r.roleId = o.id
        LEFT JOIN sys_user_extend e ON e.userId = t.id
		LEFT JOIN sys_organization s ON s.id = e.orgId
        <where>
            t.id = #{id}
        </where>
    </select>

