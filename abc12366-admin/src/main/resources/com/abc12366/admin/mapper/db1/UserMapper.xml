<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abc12366.admin.mapper.UserMapper">

	<!-- 通用查询结果列-->
	<sql id="Base_Column_List">
		 id,	username,	password,	nickname,	status,	token,	lastResetTokenTime,	createTime,	lastUpdate
	</sql>

	<!--删除：根据主键ID删除-->
	<delete id="deleteById" parameterType="java.lang.String">
		 DELETE FROM sys_user
		 WHERE id = #{id}
	</delete>

	<!-- 添加 -->
	<insert id="insert" parameterType="user">
		 INSERT INTO sys_user
 		(id,username,password,nickname,status,token,lastResetTokenTime,createTime,lastUpdate) 
		 VALUES 
 		(#{id},#{username},#{password},#{nickname},#{status},#{token},#{lastResetTokenTime},#{createTime},#{lastUpdate}) 
	</insert>

	<!-- 添加 （匹配有值的字段）-->
	<insert id="insertSelective" parameterType="user">
		 INSERT INTO sys_user
		 <trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="id != null">
				 id,
			</if>
			<if test="username != null">
				 username,
			</if>
			<if test="password != null">
				 password,
			</if>
			<if test="nickname != null">
				 nickname,
			</if>
			<if test="status != null">
				 status,
			</if>
			<if test="token != null">
				 token,
			</if>
			<if test="lastResetTokenTime != null">
				 lastResetTokenTime,
			</if>
			<if test="createTime != null">
				 createTime,
			</if>
			<if test="lastUpdate != null">
				 lastUpdate,
			</if>

		 </trim>
		 <trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="id!=null">
				 #{id},
			</if>
			<if test="username!=null">
				 #{username},
			</if>
			<if test="password!=null">
				 #{password},
			</if>
			<if test="nickname!=null">
				 #{nickname},
			</if>
			<if test="status!=null">
				 #{status},
			</if>
			<if test="token!=null">
				 #{token},
			</if>
			<if test="lastResetTokenTime!=null">
				 #{lastResetTokenTime},
			</if>
			<if test="createTime!=null">
				 #{createTime},
			</if>
			<if test="lastUpdate!=null">
				 #{lastUpdate},
			</if>
		 </trim>
	</insert>

	<!-- 修 改-->
	<update id="updateByPrimaryKeySelective" parameterType="user">
		 UPDATE sys_user
 		 <set> 
			<if test="username != null">
				 username = #{username},
			</if>
			<if test="password != null">
				 password = #{password},
			</if>
			<if test="nickname != null">
				 nickname = #{nickname},
			</if>
			<if test="status != null">
				 status = #{status},
			</if>
			<if test="token != null">
				 token = #{token},
			</if>
			<if test="lastResetTokenTime != null">
				 lastResetTokenTime = #{lastResetTokenTime},
			</if>
			<if test="createTime != null">
				 createTime = #{createTime},
			</if>
			<if test="lastUpdate != null">
				 lastUpdate = #{lastUpdate},
			</if>

 		 </set>
		 WHERE id = #{id}
	</update>

	<!-- 修 改-->
	<update id="updateByPrimaryKey" parameterType="user">
		 UPDATE sys_user
		 SET 
			 username = #{username},
			 password = #{password},
			 nickname = #{nickname},
			 status = #{status},
			 token = #{token},
			 lastResetTokenTime = #{lastResetTokenTime},
			 createTime = #{createTime},
			 lastUpdate = #{lastUpdate}
		 WHERE id = #{id}
	</update>

</mapper>