<mapper namespace="com.abc12366.admin.mapper.db1.LoginInfoMapper">

	<!--删除：根据主键ID删除-->
	<delete id="deleteByUserId" parameterType="java.lang.String">
		 DELETE FROM sys_login_info
		 WHERE userId = #{userId}
	</delete>

	<!-- 添加 -->
	<insert id="insert" parameterType="com.abc12366.admin.model.LoginInfo">
		 INSERT INTO sys_login_info
 		(id,userId,appId,token,lastResetTokenTime) 
		 VALUES 
 		(#{id},#{userId},#{appId},#{token},#{lastResetTokenTime}) 
	</insert>

	<!-- 添加 （匹配有值的字段）-->
	<insert id="insertSelective" parameterType="com.abc12366.admin.model.LoginInfo">
		 INSERT INTO sys_login_info
		 <trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="id != null">
				 id,
			</if>
			<if test="userId != null">
				 userId,
			</if>
			<if test="appId != null">
				 appId,
			</if>
			<if test="token != null">
				 token,
			</if>
			<if test="lastResetTokenTime != null">
				 lastResetTokenTime,
			</if>

		 </trim>
		 <trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="id!=null">
				 #{id},
			</if>
			<if test="userId!=null">
				 #{userId},
			</if>
			<if test="appId!=null">
				 #{appId},
			</if>
			<if test="token!=null">
				 #{token},
			</if>
			<if test="lastResetTokenTime!=null">
				 #{lastResetTokenTime},
			</if>
		 </trim>
	</insert>

	<!-- 修 改-->
	<update id="update" parameterType="com.abc12366.admin.model.LoginInfo">
		 UPDATE sys_login_info
 		 <set> 
			<if test="userId != null">
				 userId = #{userId},
			</if>
			<if test="appId != null">
				 appId = #{appId},
			</if>
			<if test="token != null">
				 token = #{token},
			</if>
			<if test="lastResetTokenTime != null">
				 lastResetTokenTime = #{lastResetTokenTime},
			</if>

 		 </set>
		 WHERE id = #{id}
	</update>

	<!-- 修 改-->
	<update id="updateByPrimaryKey" parameterType="com.abc12366.admin.model.LoginInfo">
		 UPDATE sys_login_info
		 SET 
			 userId = #{userId},
			 appId = #{appId},
			 token = #{token},
			 lastResetTokenTime = #{lastResetTokenTime}
		 WHERE id = #{id}
	</update>

</mapper>