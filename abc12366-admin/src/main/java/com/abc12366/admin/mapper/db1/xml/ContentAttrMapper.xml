<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abc12366.admin.mapper.db1.ContentAttrMapper">

	<!-- 通用查询结果列-->
	<sql id="Base_Column_List">
		 id,	attrName,	attrValue
	</sql>

	<!-- 查询（根据主键ID查询） -->
	<select id="selectByPrimaryKey" resultType="contentAttr" parameterType="java.lang.String">
		 SELECT
		 <include refid="Base_Column_List" />
		 FROM cms_content_attr
		 WHERE contentId = #{contentId}
	</select>

	<!--删除：根据主键ID删除-->
	<delete id="deleteByPrimaryKey" parameterType="java.lang.String">
		 DELETE FROM cms_content_attr
		 WHERE contentId = #{contentId}
	</delete>

	<!-- 添加 -->
	<insert id="insert" parameterType="contentAttr">
		 INSERT INTO cms_content_attr
 		(contentId,attrName,attrValue) 
		 VALUES 
 		(#{contentId},#{attrName},#{attrValue}) 
	</insert>

	<!-- 添加 （匹配有值的字段）-->
	<insert id="insertSelective" parameterType="contentAttr">
		 INSERT INTO cms_content_attr
		 <trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="contentId != null">
				 contentId,
			</if>
			<if test="attrName != null">
				 attrName,
			</if>
			<if test="attrValue != null">
				 attrValue,
			</if>

		 </trim>
		 <trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="contentId!=null">
				 #{contentId},
			</if>
			<if test="attrName!=null">
				 #{attrName},
			</if>
			<if test="attrValue!=null">
				 #{attrValue},
			</if>
		 </trim>
	</insert>

	<!-- 修 改-->
	<update id="updateByPrimaryKeySelective" parameterType="contentAttr">
		 UPDATE cms_content_attr
 		 <set> 
			<if test="attrName != null">
				 attrName = #{attrName},
			</if>
			<if test="attrValue != null">
				 attrValue = #{attrValue},
			</if>

 		 </set>
		 WHERE contentId = #{contentId}
	</update>

	<!-- 修 改-->
	<update id="updateByPrimaryKey" parameterType="contentAttr">
		 UPDATE cms_content_attr
		 SET 
			 attrName = #{attrName},
			 attrValue = #{attrValue}
		 WHERE contentId = #{contentId}
	</update>

</mapper>