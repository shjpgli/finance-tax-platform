		 INSERT INTO cms_topic
 		(topicId,channelId,topicName,shortName,keywords,description,titleImg,contentImg,tplContent,priority,isRecommend) 
		 VALUES 
 		(#{topicId},#{channelId},#{topicName},#{shortName},#{keywords},#{description},#{titleImg},#{contentImg},#{tplContent},#{priority},#{isRecommend}) 
	</insert>

