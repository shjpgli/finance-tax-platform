			<if test="titleImg != null">
				 titleImg,
			</if>
			<if test="contentImg != null">
				 contentImg,
			</if>
			<if test="tplContent != null">
				 tplContent,
			</if>
			<if test="priority != null">
				 priority,
			</if>
			<if test="isRecommend != null">
				 isRecommend,
			</if>

		 </trim>
		 <trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="topicId!=null">
				 #{topicId},
			</if>
			<if test="channelId!=null">
				 #{channelId},
			</if>
			<if test="topicName!=null">
				 #{topicName},
			</if>
			<if test="shortName!=null">
				 #{shortName},
			</if>
			<if test="keywords!=null">
				 #{keywords},
			</if>
			<if test="description!=null">
				 #{description},
			</if>
			<if test="titleImg!=null">
				 #{titleImg},
			</if>
			<if test="contentImg!=null">
				 #{contentImg},
			</if>
			<if test="tplContent!=null">
				 #{tplContent},
			</if>
			<if test="priority!=null">
				 #{priority},
			</if>
			<if test="isRecommend!=null">
				 #{isRecommend},
			</if>
		 </trim>
	</insert>

	<!-- 修 改-->
	<update id="updateByPrimaryKeySelective" parameterType="topic">
		 UPDATE cms_topic
 		 <set> 
			<if test="channelId != null">
				 channelId = #{channelId},
			</if>
			<if test="topicName != null">
				 topicName = #{topicName},
			</if>
			<if test="shortName != null">
				 shortName = #{shortName},
			</if>
			<if test="keywords != null">
				 keywords = #{keywords},
			</if>
			<if test="description != null">
