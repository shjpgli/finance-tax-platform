<mapper namespace="com.abc12366.admin.mapper.db1.TopicMapper">

	<!-- 通用查询结果列-->
	<sql id="Base_Column_List">
		 id,	channelId,	topicName,	shortName,	keywords,	description,	titleImg,	contentImg,	tplContent,	priority,	isRecommend
	</sql>

	<!-- 查询（根据主键ID查询） -->
	<select id="selectByPrimaryKey" resultType="topic" parameterType="java.lang.String">
		 SELECT
		 <include refid="Base_Column_List" />
		 FROM cms_topic
		 WHERE topicId = #{topicId}
	</select>

	<!--删除：根据主键ID删除-->
	<delete id="deleteByPrimaryKey" parameterType="java.lang.String">
		 DELETE FROM cms_topic
		 WHERE topicId = #{topicId}
	</delete>

