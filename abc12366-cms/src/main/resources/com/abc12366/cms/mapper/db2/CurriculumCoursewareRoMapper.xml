<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abc12366.cms.mapper.db2.CurriculumCoursewareRoMapper">

	<!-- 通用查询结果列-->
	<sql id="Base_Column_List">
		 coursewareId,	curriculumId,	chapterId,type,	title,	uploadWay,	link,	fileName,	fileSite,	fileSize,	duration,	isDownload,coursewareSeq,createrId,createrName,	createTime,	updateTime
	</sql>

	<!-- 查询（根据主键ID查询） -->
	<select id="selectByPrimaryKey" resultType="com.abc12366.cms.model.curriculum.CurriculumCourseware" parameterType="java.lang.String">
		 SELECT
		 <include refid="Base_Column_List" />
		 FROM cms_curriculum_courseware
		 WHERE coursewareId = #{coursewareId}
	</select>

    <!-- 查询（根据主键ID查询） -->
    <select id="selectList" resultType="com.abc12366.cms.model.curriculum.bo.CurriculumCoursewareBo" parameterType="java.util.Map">
        SELECT
        <include refid="Base_Column_List" />
        FROM cms_curriculum_courseware
        WHERE 1=1
        <if test="curriculumId != null and curriculumId != ''">
            AND curriculumId = #{curriculumId}
        </if>
        <if test="chapterId != null and chapterId != ''">
            AND chapterId = #{chapterId}
        </if>
    </select>


</mapper>