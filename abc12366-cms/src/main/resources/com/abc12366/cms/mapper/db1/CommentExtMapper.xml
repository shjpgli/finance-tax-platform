<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abc12366.cms.mapper.db1.CommentExtMapper">

	<!-- 通用查询结果列-->
	<sql id="Base_Column_List">
		 id,	ip,	text,	reply
	</sql>

	<!-- 查询（根据主键ID查询） -->
	<select id="selectByPrimaryKey" resultType="commentExt" parameterType="java.lang.String">
		 SELECT
		 <include refid="Base_Column_List" />
		 FROM cms_comment_ext
		 WHERE commentId = #{commentId}
	</select>

	<!--删除：根据主键ID删除-->
	<delete id="deleteByPrimaryKey" parameterType="java.lang.String">
		 DELETE FROM cms_comment_ext
		 WHERE commentId = #{commentId}
	</delete>

	<!-- 添加 -->
	<insert id="insert" parameterType="commentExt">
		 INSERT INTO cms_comment_ext
 		(commentId,ip,text,reply) 
		 VALUES 
 		(#{commentId},#{ip},#{text},#{reply}) 
	</insert>

	<!-- 添加 （匹配有值的字段）-->
	<insert id="insertSelective" parameterType="commentExt">
		 INSERT INTO cms_comment_ext
		 <trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="commentId != null">
				 commentId,
			</if>
			<if test="ip != null">
				 ip,
			</if>
			<if test="text != null">
				 text,
			</if>
			<if test="reply != null">
				 reply,
			</if>

		 </trim>
		 <trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="commentId!=null">
				 #{commentId},
			</if>
			<if test="ip!=null">
				 #{ip},
			</if>
			<if test="text!=null">
				 #{text},
			</if>
			<if test="reply!=null">
				 #{reply},
			</if>
		 </trim>
	</insert>

	<!-- 修 改-->
	<update id="updateByPrimaryKeySelective" parameterType="commentExt">
		 UPDATE cms_comment_ext
 		 <set> 
			<if test="ip != null">
				 ip = #{ip},
			</if>
			<if test="text != null">
				 text = #{text},
			</if>
			<if test="reply != null">
				 reply = #{reply},
			</if>

 		 </set>
		 WHERE commentId = #{commentId}
	</update>

	<!-- 修 改-->
