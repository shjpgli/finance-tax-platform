<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abc12366.cms.mapper.db1.CommentExtMapper">

    <!--删除：根据主键ID删除-->
    <delete id="deleteByPrimaryKey" parameterType="java.lang.String">
        DELETE FROM cms_comment_ext
        WHERE commentId = #{commentId}
    </delete>

    <!--删除：根据主键ID批量删除-->
    <delete id="deleteList">
        DELETE FROM cms_comment_ext
        WHERE commentId in
        <foreach item="item" index="index" collection="commentIds" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <!-- 添加 -->
    <insert id="insert" parameterType="com.abc12366.cms.model.CommentExt">
        INSERT INTO cms_comment_ext
        (commentId,ip,text,reply)
        VALUES
        (#{commentId},#{ip},#{text},#{reply})
    </insert>

    <!-- 添加 （匹配有值的字段）-->
    <insert id="insertSelective" parameterType="com.abc12366.cms.model.CommentExt">
        INSERT INTO cms_comment_ext
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="commentId != null">
                commentId,
            </if>
            <if test="ip != null">
                ip,
            </if>
            <if test="text != null">
                text,
            </if>
            <if test="reply != null">
                reply,
            </if>

        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="commentId!=null">
                #{commentId},
            </if>
            <if test="ip!=null">
                #{ip},
            </if>
            <if test="text!=null">
                #{text},
            </if>
            <if test="reply!=null">
                #{reply},
            </if>
        </trim>
    </insert>

    <!-- 修 改-->
    <update id="updateByPrimaryKeySelective" parameterType="com.abc12366.cms.model.CommentExt">
        UPDATE cms_comment_ext
        <set>
            <if test="ip != null">
                ip = #{ip},
            </if>
            <if test="text != null">
                text = #{text},
            </if>
            <if test="reply != null">
                reply = #{reply},
            </if>

        </set>
        WHERE commentId = #{commentId}
    </update>

    <!-- 修 改-->
    <update id="updateByPrimaryKey" parameterType="com.abc12366.cms.model.CommentExt">
        UPDATE cms_comment_ext
        SET
        ip = #{ip},
        text = #{text},
        reply = #{reply}
        WHERE commentId = #{commentId}
    </update>

</mapper>