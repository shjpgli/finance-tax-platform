<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abc12366.cms.mapper.db2.CurriculumOrderRoMapper">

	<!-- 通用查询结果列-->
	<sql id="Base_Column_List">
		 orderId,	curriculumId,	userId,	nickname,	username,	memberGrade,	orderName,	orderPrice,	isIntegral,	orderTime,	phone,	visitIP,	visitSite,	orderStatus
	</sql>

	<!-- 查询（根据主键ID查询） -->
	<select id="selectByPrimaryKey" resultType="com.abc12366.cms.model.curriculum.CurriculumOrder" parameterType="java.lang.String">
		 SELECT
		 <include refid="Base_Column_List" />
		 FROM cms_curriculum_order
		 WHERE orderId = #{orderId}
	</select>

    <!-- 查询（根据主键ID查询） -->
    <select id="selectList" resultType="com.abc12366.cms.model.curriculum.bo.CurriculumOrderBo" parameterType="java.util.Map">
        SELECT
        <include refid="Base_Column_List" />
        FROM cms_curriculum_order
        WHERE 1=1
    </select>

</mapper>