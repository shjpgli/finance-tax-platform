<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abc12366.cms.mapper.db2.ContentCheckRoMapper">

    <!-- 通用查询结果列-->
    <sql id="Base_Column_List">
        contentId, checkStep, checkOpinion, isRejected, reviewer, checkDate
    </sql>

    <!-- 查询（根据主键ID查询） -->
    <select id="selectByPrimaryKey" resultType="com.abc12366.cms.model.ContentCheck" parameterType="java.lang.String">
        SELECT
        <include refid="Base_Column_List"/>
        FROM cms_content_check
        WHERE contentId = #{contentId}
    </select>


</mapper>