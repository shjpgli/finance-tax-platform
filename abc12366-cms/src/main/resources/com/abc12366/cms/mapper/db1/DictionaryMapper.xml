<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abc12366.cms.mapper.db1.DictionaryMapper">

	<!-- 通用查询结果列-->
	<sql id="Base_Column_List">
		 id,	name,	value,	type
	</sql>

	<!-- 查询（根据主键ID查询） -->
	<select id="selectByPrimaryKey" resultType="dictionary" parameterType="java.lang.String">
		 SELECT
		 <include refid="Base_Column_List" />
		 FROM cms_dictionary
		 WHERE id = #{id}
	</select>

	<!--删除：根据主键ID删除-->
	<delete id="deleteByPrimaryKey" parameterType="java.lang.String">
		 DELETE FROM cms_dictionary
		 WHERE id = #{id}
	</delete>

	<!-- 添加 -->
	<insert id="insert" parameterType="dictionary">
		 INSERT INTO cms_dictionary
 		(id,name,value,type) 
		 VALUES 
 		(#{id},#{name},#{value},#{type}) 
	</insert>

	<!-- 添加 （匹配有值的字段）-->
	<insert id="insertSelective" parameterType="dictionary">
		 INSERT INTO cms_dictionary
		 <trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="id != null">
				 id,
			</if>
			<if test="name != null">
				 name,
			</if>
			<if test="value != null">
				 value,
			</if>
			<if test="type != null">
				 type,
			</if>

		 </trim>
		 <trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="id!=null">
				 #{id},
			</if>
			<if test="name!=null">
				 #{name},
			</if>
			<if test="value!=null">
				 #{value},
			</if>
			<if test="type!=null">
				 #{type},
			</if>
		 </trim>
	</insert>

	<!-- 修 改-->
	<update id="updateByPrimaryKeySelective" parameterType="dictionary">
		 UPDATE cms_dictionary
 		 <set> 
			<if test="name != null">
				 name = #{name},
			</if>
			<if test="value != null">
				 value = #{value},
			</if>
			<if test="type != null">
				 type = #{type},
			</if>

 		 </set>
		 WHERE id = #{id}
	</update>

	<!-- 修 改-->
	<update id="updateByPrimaryKey" parameterType="dictionary">
		 UPDATE cms_dictionary
		 SET 
			 name = #{name},
			 value = #{value},
			 type = #{type}
		 WHERE id = #{id}
	</update>

</mapper>