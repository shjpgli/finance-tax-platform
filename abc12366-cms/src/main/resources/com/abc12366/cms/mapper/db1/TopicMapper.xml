<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abc12366.cms.mapper.db1.TopicMapper">

    <!--删除：根据主键ID删除-->
    <delete id="deleteByPrimaryKey" parameterType="java.lang.String">
        DELETE FROM cms_topic
        WHERE topicId = #{topicId}
    </delete>

    <!--删除：根据主键ID批量删除-->
    <delete id="deleteList">
        DELETE FROM cms_topic
        WHERE topicId in
        <foreach item="item" index="index" collection="topicIds" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <!-- 添加 -->
    <insert id="insert" parameterType="com.abc12366.cms.model.Topic">
        INSERT INTO cms_topic
        (topicId,channelId,topicName,shortName,keywords,description,titleImg,contentImg,tplContent,priority,siteId,isRecommend)
        VALUES
        (#{topicId},#{channelId},#{topicName},#{shortName},#{keywords},#{description},#{titleImg},#{contentImg},#{tplContent},#{priority},#{siteId},#{isRecommend})
    </insert>

    <!-- 添加 （匹配有值的字段）-->
    <insert id="insertSelective" parameterType="com.abc12366.cms.model.Topic">
        INSERT INTO cms_topic
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="topicId != null">
                topicId,
            </if>
            <if test="channelId != null">
                channelId,
            </if>
            <if test="topicName != null">
                topicName,
            </if>
            <if test="shortName != null">
                shortName,
            </if>
            <if test="keywords != null">
                keywords,
            </if>
            <if test="description != null">
                description,
            </if>
            <if test="titleImg != null">
                titleImg,
            </if>
            <if test="contentImg != null">
                contentImg,
            </if>
            <if test="tplContent != null">
                tplContent,
            </if>
            <if test="priority != null">
                priority,
            </if>
            <if test="siteId != null">
                siteId,
            </if>
            <if test="isRecommend != null">
                isRecommend,
            </if>

        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="topicId!=null">
                #{topicId},
            </if>
            <if test="channelId!=null">
                #{channelId},
            </if>
            <if test="topicName!=null">
                #{topicName},
            </if>
            <if test="shortName!=null">
                #{shortName},
            </if>
            <if test="keywords!=null">
                #{keywords},
            </if>
            <if test="description!=null">
                #{description},
            </if>
            <if test="titleImg!=null">
                #{titleImg},
            </if>
            <if test="contentImg!=null">
                #{contentImg},
            </if>
            <if test="tplContent!=null">
                #{tplContent},
            </if>
            <if test="priority!=null">
                #{priority},
            </if>
            <if test="siteId!=null">
                #{siteId},
            </if>
            <if test="isRecommend!=null">
                #{isRecommend},
            </if>
        </trim>
    </insert>

    <!-- 修 改-->
    <update id="updateByPrimaryKeySelective" parameterType="com.abc12366.cms.model.Topic">
        UPDATE cms_topic
        <set>
            <if test="channelId != null">
                channelId = #{channelId},
            </if>
            <if test="topicName != null">
                topicName = #{topicName},
            </if>
            <if test="shortName != null">
                shortName = #{shortName},
            </if>
            <if test="keywords != null">
                keywords = #{keywords},
            </if>
            <if test="description != null">
                description = #{description},
            </if>
            <if test="titleImg != null">
                titleImg = #{titleImg},
            </if>
            <if test="contentImg != null">
                contentImg = #{contentImg},
            </if>
            <if test="tplContent != null">
                tplContent = #{tplContent},
            </if>
            <if test="priority != null">
                priority = #{priority},
            </if>
            <if test="siteId != null">
                siteId = #{siteId},
            </if>
            <if test="isRecommend != null">
                isRecommend = #{isRecommend},
            </if>

        </set>
        WHERE topicId = #{topicId}
    </update>

    <!-- 修 改-->
    <update id="updateByPrimaryKey" parameterType="com.abc12366.cms.model.Topic">
        UPDATE cms_topic
        SET
        channelId = #{channelId},
        topicName = #{topicName},
        shortName = #{shortName},
        keywords = #{keywords},
        description = #{description},
        titleImg = #{titleImg},
        contentImg = #{contentImg},
        tplContent = #{tplContent},
        priority = #{priority},
        siteId = #{siteId},
        isRecommend = #{isRecommend}
        WHERE topicId = #{topicId}
    </update>

</mapper>