	<!-- 修 改-->
	<update id="update" parameterType="com.abc12366.bangbang.model.question.QuestionAccepted">
		UPDATE bb_question_accepted
		<set>
			<if test="nsrsbh != null">
				nsrsbh = #{nsrsbh},
			</if>
			<if test="nsrmc != null">
				nsrmc = #{nsrmc},
			</if>
			<if test="productName != null">
				productName = #{productName},
			</if>
			<if test="type != null">
				type = #{type},
			</if>
			<if test="name != null">
