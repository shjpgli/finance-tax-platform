			</if>
			<if test="nsrsbh != null">
				nsrsbh,
			</if>
			<if test="nsrmc != null">
				nsrmc,
			</if>
			<if test="productName != null">
				productName,
			</if>
			<if test="type != null">
				type,
			</if>
			<if test="name != null">
				name,
			</if>
			<if test="phone != null">
				phone,
			</if>
			<if test="visitDate != null">
				visitDate,
			</if>

		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides="," >
