<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abc12366.bangbang.mapper.db2.QuestionLogRoMapper">

	<!-- 通用查询结果列-->
	<sql id="Base_Column_List">
		 id,userId,attentionUserId,qcId,answerId,sourceId,qlogType,createTime
	</sql>

	<!-- 查询（根据主键ID查询） -->
	<select id="selectByPrimaryKey" resultType="com.abc12366.bangbang.model.question.QuestionLog" parameterType="java.lang.String">
		 SELECT
		 <include refid="Base_Column_List" />
		 FROM bb_question_log
		 WHERE id = #{id}
	</select>

    <!-- 查询（根据主键ID查询） -->
    <select id="selectList" resultType="com.abc12366.bangbang.model.question.bo.QuestionLogBo" parameterType="java.lang.String">
        SELECT
        id,userId,attentionUserId,qcId,answerId,sourceId,qlogType,createTime
        FROM bb_question_log l
        where l.userId = #{userId}
    </select>


</mapper>