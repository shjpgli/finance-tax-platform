<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abc12366.uc.mapper.db2.TradeLogRoMapper">

	<!-- 通用查询结果列-->
	<sql id="Base_Column_List">
		 id,	orderNo,	amount,	tradeStatus,	tradeTime,	payMethod,	createTime,	lastUpdate,	compareStatus,	compareTime
	</sql>

	<!-- 查询（根据主键ID查询） -->
	<select id="selectByPrimaryKey" resultType="com.abc12366.uc.model.TradeLog" parameterType="java.lang.String">
		 SELECT
		 <include refid="Base_Column_List" />
		 FROM uc_trade_log
		 WHERE id = #{id}
	</select>

    <!-- 查询（根据主键orderNo查询） -->
    <select id="selectList" resultType="com.abc12366.uc.model.TradeLog" parameterType="com.abc12366.uc.model.TradeLog">
        SELECT
        <include refid="Base_Column_List" />
        FROM uc_trade_log
        WHERE orderNo = #{orderNo}
    </select>
</mapper>