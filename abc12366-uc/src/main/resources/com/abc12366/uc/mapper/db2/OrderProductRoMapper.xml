    <select id="selectByPrimaryKey" resultType="com.abc12366.uc.model.OrderProduct" parameterType="java.lang.String">
        SELECT
        <include refid="Base_Column_List"/>
        FROM uc_order_product
        WHERE orderNo = #{orderNo}
    </select>

    <select id="selectByProductId" resultType="com.abc12366.uc.model.OrderProduct" parameterType="java.lang.String">
        SELECT
        <include refid="Base_Column_List"/>
        FROM uc_order_product
        WHERE productId = #{productId}
    </select>

    <select id="selectByOrderNo" resultMap="orderProductRoMap" parameterType="com.abc12366.uc.model.bo.OrderProductBO">
        SELECT
        op.orderNo, op.productId, op.sellingPrice, op.unitPrice, op.num, op.discount, op.dealPrice, op.name,
        op.categoryId, op.category, op.weight, op.createTime, op.lastUpdate,op.goodsId,op.specInfo
        FROM uc_order_product op
        WHERE op.orderNo = #{orderNo}
    </select>
