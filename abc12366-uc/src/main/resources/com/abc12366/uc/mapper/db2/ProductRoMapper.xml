<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abc12366.uc.mapper.db2.ProductRoMapper">

	<!-- 通用查询结果列-->
	<sql id="Base_Column_List">
		 goodsId,	dictId,	stock,	marketPrice,	sellingPrice,	costPrice,	finalPrice,	discount,	uvipLevel,	weight,	createTime,	lastUpdate
	</sql>

	<!-- 查询（根据主键ID查询） -->
	<select id="selectById" resultType="com.abc12366.uc.model.Product" parameterType="java.lang.String">
		 SELECT
		 <include refid="Base_Column_List" />
		 FROM uc_product
		 WHERE id = #{id}
	</select>

	<!-- 查询（根据主键ID和状态查询） -->
	<select id="selectByIdAndStatus" resultType="com.abc12366.uc.model.Product" parameterType="java.lang.String">
		 SELECT
		 <include refid="Base_Column_List" />
		 FROM uc_product
		 WHERE id = #{id} and status='1'
	</select>

	<!-- 查询条件根据） -->
	<select id="selectList" resultType="com.abc12366.uc.model.Product" parameterType="com.abc12366.uc.model.Product">
		 SELECT
		 <include refid="Base_Column_List" />
		 FROM uc_product
        <where>
            1=1
            <if test="name != null and name!=''"> and name = #{name}</if>
            <if test="category != null and category!=''"> and category = #{category}</if>
            <if test="vipLevel != null and vipLevel!=''"> AND vipLevel = #{vipLevel}</if>
        </where>
	</select>

    <!-- 查询条件根据） -->
    <select id="selectProductList" resultType="com.abc12366.uc.model.Product" parameterType="com.abc12366.uc.model.Product">
        SELECT
        <include refid="Base_Column_List" />
        FROM uc_product
        <where>
            status='1'
            <if test="name != null and name!=''"> and name = #{name}</if>
            <if test="category != null and category!=''"> and category = #{category}</if>
            <if test="vipLevel != null and vipLevel!=''"> AND vipLevel = #{vipLevel}</if>
        </where>
    </select>

</mapper>