<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abc12366.uc.mapper.db2.OrderLogRoMapper">

    <!-- 通用查询结果列-->
    <sql id="Base_Column_List">
        id, orderNo, action, createTime, createUser, remark
    </sql>

    <!-- 查询（根据主键ID查询） -->
    <select id="selectByPrimaryKey" resultType="com.abc12366.uc.model.OrderLog" parameterType="java.lang.String">
        SELECT
        <include refid="Base_Column_List"/>
        FROM uc_order_log
        WHERE id = #{id}
    </select>

    <!-- 查询（根据主键ID查询） -->
    <select id="selectList" resultType="com.abc12366.uc.model.bo.GoodsLogBO" parameterType="com.abc12366.uc.model.OrderLog">
        SELECT
        o.id, o.orderNo, o.action, o.createTime, o.createUser, o.remark,u.nickname as createUserName
        FROM uc_order_log o
        LEFT JOIN uc_user_admin u ON o.createUser = u.id
        WHERE o.orderNo = #{orderNo}
        ORDER BY o.createTime asc
    </select>
</mapper>