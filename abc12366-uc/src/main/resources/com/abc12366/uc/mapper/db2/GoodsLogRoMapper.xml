<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abc12366.uc.mapper.GoodsLogMapper">

	<!-- 通用查询结果列-->
	<sql id="Base_Column_List">
		id,	goodsId,	action,	createTime,	createUser,	remark
	</sql>

	<!-- 查询（根据主键ID查询） -->
	<select id="selectByPrimaryKey" resultType="goodsLog" parameterType="java.lang.String">
		SELECT
		<include refid="Base_Column_List" />
		FROM uc_goods_log
		WHERE id = #{id}
	</select>

	<!-- 查询（根据主键ID查询） -->
	<select id="selectGoodsLogList" resultType="goodsLog" parameterType="java.lang.String">
		SELECT
		<include refid="Base_Column_List" />
		FROM uc_goods_log
		WHERE goodsId = #{goodsId}
	</select>
</mapper>