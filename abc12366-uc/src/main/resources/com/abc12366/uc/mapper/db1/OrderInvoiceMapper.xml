<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abc12366.uc.mapper.db1.OrderInvoiceMapper">

	<!--删除：根据主键ID删除-->
	<delete id="delete" parameterType="java.lang.String">
		 DELETE FROM uc_order_invoice
		 WHERE id = #{id}
	</delete>

	<!-- 添加 （匹配有值的字段）-->
	<insert id="insert" parameterType="com.abc12366.uc.model.OrderInvoice">
		 INSERT INTO uc_order_invoice
		 <trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="id != null">
				 id,
			</if>
			<if test="orderId != null">
				 orderId,
			</if>
			<if test="invoiceId != null">
				 invoiceId,
			</if>
			<if test="createTime != null">
				 createTime,
			</if>
			<if test="lastUpdate != null">
				 lastUpdate,
			</if>

		 </trim>
		 <trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="id!=null">
				 #{id},
			</if>
			<if test="orderId!=null">
				 #{orderId},
			</if>
			<if test="invoiceId!=null">
				 #{invoiceId},
			</if>
			<if test="createTime!=null">
				 #{createTime},
			</if>
			<if test="lastUpdate!=null">
				 #{lastUpdate},
			</if>
		 </trim>
	</insert>

	<!-- 修 改-->
	<update id="update" parameterType="com.abc12366.uc.model.OrderInvoice">
		 UPDATE uc_order_invoice
 		 <set> 
			<if test="orderId != null">
				 orderId = #{orderId},
			</if>
			<if test="invoiceId != null">
				 invoiceId = #{invoiceId},
			</if>
			<if test="createTime != null">
				 createTime = #{createTime},
			</if>
			<if test="lastUpdate != null">
				 lastUpdate = #{lastUpdate},
			</if>

 		 </set>
		 WHERE id = #{id}
	</update>

</mapper>