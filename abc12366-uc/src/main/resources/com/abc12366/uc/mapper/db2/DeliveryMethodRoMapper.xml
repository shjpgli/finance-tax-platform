<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abc12366.uc.mapper.db2.DeliveryMethodRoMapper">

	<!-- 通用查询结果列-->
	<sql id="Base_Column_List">
		 id,	name,	sort,	status,	description,	createTime,	lastUpdate
	</sql>

	<!-- 查询（根据主键ID查询） -->
	<select id="selectByPrimaryKey" resultType="com.abc12366.uc.model.DeliveryMethod" parameterType="java.lang.String">
		 SELECT
		 <include refid="Base_Column_List" />
		 FROM uc_delivery_method
		 WHERE id = #{id}
	</select>

    <select id="selectList" resultType="com.abc12366.uc.model.DeliveryMethod" parameterType="com.abc12366.uc.model.DeliveryMethod">
        SELECT
        <include refid="Base_Column_List" />
        FROM uc_delivery_method
        <where>
            1=1
            <if test="name != null  and name!=''"> AND name LIKE CONCAT('%',#{name},'%')</if>
        </where>
    </select>
</mapper>